<Window x:Class="CompleteInformation.RecipeModule.AvaloniaApp.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:CompleteInformation.RecipeModule.AvaloniaApp;assembly=CompleteInformation.RecipeModule.AvaloniaApp"
        xmlns:core="clr-namespace:CompleteInformation.RecipeModule.Core;assembly=CompleteInformation.RecipeModule.Core"
        Title="Complete Information - Recipes"
        Height="660" Width="1024">
    <Grid ColumnDefinitions="1*, 1*">
        <ListBox Items="{Binding Recipes}" SelectedItem="{Binding ActiveRecipe, Mode=TwoWay}" Grid.Column="0">
            <ListBox.DataTemplates>
                <DataTemplate DataType="core:Recipe">
                    <Grid Name="grid" Cursor="Hand">
                        <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.DataTemplates>
        </ListBox>
        <app:DetailView Grid.Column="1" DataContext="{Binding ActiveRecipe}"/>
    </Grid>
</Window>
