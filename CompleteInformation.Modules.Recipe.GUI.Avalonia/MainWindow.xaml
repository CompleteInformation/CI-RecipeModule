        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:API="clr-namespace:CompleteInformation.Modules.Recipe.API;assembly=CompleteInformation.Modules.Recipe"
        Title="Complete Information - Recipes">
    <Grid ColumnDefinitions="1*, 1*">
        <ListBox>
            <ListBox.DataTemplates>
                <DataTemplate DataType="API:Recipe">
                    <Grid Name="grid" Cursor="Hand">
